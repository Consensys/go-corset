;; Extract the ith byte from a given (large) word where i==0
;; identifies the most significant byte.
fn byteAt(value u8192, index u10) -> (res u8) {
  var b u1
  var hi u8
  var i u10
  var lo u8184
  ;; split off low byte
  hi,lo = value
  ;; determine next position
  b, i = index - 1
  ;; check for underflow
  if b == 1 goto exit
  ;; recursive case
  res = byteAt(2^8 * lo,i)
  return
exit:
  ;; base case
  res = hi
  return
}
