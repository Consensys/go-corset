include "../util/byte_slice.zkasm"

;; Extract a limb of 16 bytes from index n from a u1024 value.
fn limb_u1024(word u1024, n u7) -> (res u128) {
  var m u7
  var b u1
  b, m = n + 15
  var tmp u1024
  tmp = byte_slice_u1024(word, n, m)
  var b896 u896
  b896, res = tmp
  return
}

;; Extract a limb of 16 bytes from index n from a u512 value.
fn limb_u512(word u512, n u6) -> (res u128) {
  var m u6
  var b u1
  b, m = n + 15
  var tmp u512
  tmp = byte_slice_u512(word, n, m)
  var b384 u384
  b384, res = tmp
  return
}
