(defpurefun (vanishes! x) (== 0 x))

(defcolumns (X :i32) (Y :i32))
(defconstraint c1 () (vanishes! (+ X (* -2 Y))))
(defconstraint c2 () (vanishes! (+ (* -2 Y) X)))
(defconstraint c3 () (vanishes! (+ X (* -1 Y) (* -1 Y))))
(defconstraint c4 () (vanishes! (+ (* -1 Y) X (* -1 Y))))
(defconstraint c5 () (vanishes! (+ (* -1 Y) (* -1 Y) X)))
(defconstraint c6 () (vanishes! (+ (* 1 X) (* -1 Y) (* -1 Y))))
(defconstraint c7 () (vanishes! (+ (* -1 Y) (* 1 X) (* -1 Y))))
(defconstraint c8 () (vanishes! (+ (* -1 Y) (* -1 Y) (* 1 X))))
